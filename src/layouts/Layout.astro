---
import { siteConfig } from '../data/site';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
}

const {
  title = siteConfig.name,
  description = siteConfig.description.ja,
  ogImage = '/assets/og-image.png',
} = Astro.props;

const fullTitle = title === siteConfig.name ? title : `${title} | ${siteConfig.name}`;
const canonicalURL = new URL(Astro.url.pathname, siteConfig.url);
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, siteConfig.url)} />
    <meta property="og:site_name" content={siteConfig.name} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImage, siteConfig.url)} />
  </head>
  <body class="min-h-screen bg-white text-gray-900 antialiased flex flex-col">
    <header class="border-b border-gray-100">
      <nav class="max-w-4xl mx-auto px-4 py-4 flex items-center justify-between">
        <a href="/" class="text-xl font-bold tracking-tight hover:text-accent transition-colors">
          sonohalab
        </a>
        <ul class="flex items-center gap-6 text-sm">
          {siteConfig.navigation.slice(1).map((item) => (
            <li>
              <a
                href={item.href}
                class="text-gray-600 hover:text-accent transition-colors"
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </header>

    <main class="flex-1">
      <slot />
    </main>

    <footer class="border-t border-gray-100 mt-16">
      <div class="max-w-4xl mx-auto px-4 py-8 text-center text-sm text-gray-500">
        <p>&copy; {new Date().getFullYear()} sonohalab. All rights reserved.</p>
        <p class="mt-2">
          <a href={`mailto:${siteConfig.contact.email}`} class="hover:text-accent transition-colors">
            {siteConfig.contact.email}
          </a>
        </p>
      </div>
    </footer>
  </body>
</html>
